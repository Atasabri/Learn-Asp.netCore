@model RoleViewModel

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <h3>Users</h3>
            <div class="row">
                <div class="col-md-4">
                    @for (int i=0;i<Model.Users.Count;i++)
                    {
                        <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.Users[i].UserID" />
                        <input type="hidden" asp-for="@Model.Users[i].Email" />
                        <input type="checkbox" class="form-check-input" asp-for="@Model.Users[i].IsSelected" />
                        <label for="@Model.Users[i].IsSelected" class="form-check-label">@Model.Users[i].Email</label>
                        </div>

                    }
                </div>
                </div>
            <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

