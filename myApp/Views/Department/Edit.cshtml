@model Department
@{
    ViewBag.Title = "Edit Department";
}



<form asp-controller="Department" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <div class="col-md-10">
            <input asp-for="Name" value="@Model.Name" class="form-control" />
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Photo</label>
        <div class="col-md-10 custom-file">
            <input type="file" name="Photo" class="form-control custom-file-input" />
            <label class="custom-file-label">Choose Photo ......</label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Edit" class="btn btn-info" />
        </div>
    </div>
</form>



