@model Department

@{
    ViewBag.Title = "Department Details";
}

<h2></h2>

<div>
    <h4></h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Model.Name
        </dd>

        <dt>
            Image
        </dt>

        <dd>
            <img src="~/Uploads/@(Model.ID).jpg" width="300" height="300" asp-append-version="true" />
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-ID="@Model.ID">Edit</a> |
    <a asp-action="Index">Departments</a>
</p>

